
@{
    ViewBag.Title = "CadastroFT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Tela de cadastro FT-->
<form action="index.html">
    <!-- area de campos do form -->
    <div class="col-md-6" style="margin-left:150px">
        <h3 class="page-header">Register your FT and disclose your brand!</h3>
        <div class="row">
            <div class="form-group col-md-10">
                <label for="campoNome">Name FT</label>
                <input type="text" class="form-control" id="campoNome">
            </div>

            <div class="form-group col-md-10">
                <label for="campoEmail">e-mail</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group col-md-10">
                <label for="campoSenha">Password</label>
                <input type="password" class="form-control" id="campoPassword1" placeholder="Password">
            </div>
            <div class="form-group col-md-10">
                <label for="exampleInputFile">select the image</label>
                <input type="file" id="exampleInputFile">
                <p class="help-block">select the image</p>
            </div>         
            <div class="form-group col-md-10">
                <label for="campoEndereco">Address</label>
                <input type="text" class="form-control" id="campo3">
            </div>

            <div class="form-group col-md-10">
                <label for="campoCidade">City</label>
                <input type="text" class="form-control" id="campo3">
                <br />
                <b>Talk about your FT</b>
                <textarea class="form-control" rows="3"></textarea>
                <button type="button" class="btn btn-success" style="margin-left:475px">Salve</button>

            </div>
        </div>
    </div>
</form>