
@{
    ViewBag.Title = "CadastroCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CadastroCliente</h2>
<!-- aqui começa o formulario-->
<form action="index.html">
    <!-- area de campos do form -->
    <div class="col-md-6" style="margin-left:150px">
        <h3 class="page-header">Realize seu Cadastro para participar de promoções</h3>     
           <div class="row">
                <div class="form-group col-md-10">
                    <label for="campoNome">Nome Completo</label>
                    <input type="text" class="form-control" id="campoNome">
                </div>

                <div class="form-group col-md-10">
                    <label for="campoEmail">Endereço de e-mail</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">    
                </div>
               <div class="form-group col-md-10">
                   <label for="campoSenha">Senha</label>
                   <input type="password" class="form-control" id="campoPassword1" placeholder="Password">
               </div>

                <div class="form-group col-md-10">
                    <label for="campoDataNasc">Data de Nascimento</label>
                    <input type="date" name="validade">
                </div>
               <div class="control-group col-md-10">
                   <label class="control-label">Sexo</label>
                   <div class="controls">
                       <label class="radio">
                           <input type="radio" name="sexo" value="Masculino" checked="checked">
                           Masculino
                       </label>
                       <label class="radio">
                           <input type="radio" name="sexo" value="Feminino">
                           Feminino
                       </label>
                   </div>
               </div>
                    <div class="form-group col-md-10">
                        <label for="campoEndereco">Endereço</label>
                        <input type="text" class="form-control" id="campo3">
                    </div>

                    <div class="form-group col-md-10">
                        <label for="campoCidade">Cidade</label>
                        <input type="text" class="form-control" id="campo3">
                        <br/>
                        <button type="button" class="btn btn-success" style="margin-left:475px">Salve</button>

                        </div>
            </div>
        </div>
</form>
